#!/bin/sh
cd ~/.dotfiles

ln -is $(readlink -f ~/.dotfiles/gemrc) ~/.gemrc
ln -is $(readlink -f ~/.dotfiles/gitconfig) ~/.gitconfig
ln -is $(readlink -f ~/.dotfiles/gitignore) ~/.gitignore
ln -is $(readlink -f ~/.dotfiles/irbrc) ~/.irbrc

stow plugins
# ln -s ~/.dotfiles/plugins ~/.zsh-plugins

cp -i $(readlink -f ~/.dotfiles/zshrc) ~/.zshrc

read -p "Your Name for Git Commits: " git_name

if [[ -n $git_name ]]; then
  read -p "Your Email for Git Commits: " git_work_email

  echo "" >> ~/.zshrc
  echo "# GIT CONFIG" >> ~/.zshrc
  echo "export GIT_AUTHOR_NAME=\"$git_name\"" >> ~/.zshrc
  echo "export GIT_AUTHOR_EMAIL=\"$git_email\"" >> ~/.zshrc
  echo "export GIT_COMMITTER_NAME=\"$git_name\"" >> ~/.zshrc
  echo "export GIT_COMMITTER_EMAIL=\"$git_email\"" >> ~/.zshrc

  echo "Git Name and Email have been appended to ~/.zshrc"
fi
